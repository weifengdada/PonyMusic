<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/play_page_default_bg"
    tools:context="com.example.ponymusic.PlayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/play_hide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_down"/>
          <LinearLayout
              android:layout_marginLeft="20dp"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:orientation="vertical"
              android:layout_toRightOf="@+id/play_hide"
              >
               <TextView
                   android:id="@+id/play_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="大海"
                   android:textColor="#FFF"
                   android:textSize="20dp"
                   />
              <TextView
                  android:id="@+id/play_author"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="张雨生"
                  android:layout_gravity="bottom"
                  />
          </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/play_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"/>
    <SeekBar
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:max="100"
        android:secondaryProgress="20"
        android:progress="0"
        android:indeterminate="false" />
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:59"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
       <ImageView
           android:id="@+id/prev_song"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_play_btn_prev"
           />
        <ImageView
            android:id="@+id/song_play"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_play_btn_pause"
            />

        <ImageView
            android:id="@+id/song_next"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_btn_next"
            />

    </RelativeLayout>

</LinearLayout>
